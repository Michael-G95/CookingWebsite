@model  List<MVCApp.Models.ProductModel>

<!-- Page displaying the search results from Catalog -->
@{
    ViewBag.Title = "Search Results";
}


    <div class="container-fluid text-center border-bottom border-dark">
        <div class="modal-title border-bottom border-dark mb-5 mt-3">
            <!-- Page title -->
            <h3>Search Results</h3>
        </div>

        <div class="container-fluid mb-5">
            <!-- Content container -->
            <table class="table table-bordered table-hover w-100">
                <tr class="thead-light">
                    <th>@Html.DisplayNameFor(model => model[0].ProdName)</th>
                    <th>@Html.DisplayNameFor(model => model[0].ProductID)</th>
                    <th>@Html.DisplayNameFor(model => model[0].ProdDescription_Short)</th>
                    <th>@Html.DisplayNameFor(model => model[0].ProdPrice)</th>
                </tr>
                @foreach (var item in Model)
                {
                   <tr onclick="window.location.href='@Url.Action(controllerName:"Catalog",actionName:"Product",routeValues:new {item.ProductID})'">
                        <td>@Html.DisplayFor(i => item.ProdName)</td>
                        <td>@Html.DisplayFor(i => item.ProductID)</td>
                        <td>@Html.DisplayFor(i => item.ProdDescription_Short)</td>
                        <td>£@Html.DisplayFor(i => item.ProdPrice)</td>

                    </tr>
                }
            </table>
            @Html.ActionLink("Back to Catalog", "Index")
        </div>
    </div>
